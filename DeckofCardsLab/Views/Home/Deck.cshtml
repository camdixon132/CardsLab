@{
}

<form asp-method="post asp-action="Deck">
    <p>Click the button to draw cards</p>
    

    <input type="Submit" class="btn btn-primary" value="Draw Cards" />

</form>





@{

    
    foreach (Card c in Model.Cards)
    {
        <div>
            <h2>@c.Value of @c.Suit</h2>
            <h2><img src="@c.Image"></h2>
        </div>

    }
    
}

